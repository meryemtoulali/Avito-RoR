<%= form_with(model: sub_category) do |form| %>
  <% if sub_category.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(sub_category.errors.count, "error") %> prohibited this sub_category from being saved:</h2>

      <ul>
        <% sub_category.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :nom %>
    <%= form.text_field :nom %>
  </div>

  <div class="form-group">
    <div class="col control-label">
      <%= form.label :category %>
    </div>
    <div class="col">
      <%= form.select :category_id, options_for_select(Category.all.map { |category| [category.nom, category.id]})%>
    </div>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
