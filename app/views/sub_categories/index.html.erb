<div class="container my-4">

    <%= link_to 'Retour', root_url %>
    <div class="mt-3 simple-container px-5 py-5">
            <div  class="mb-5">
                <h4>Index des sous-catégories</h1>
            </div>

            <table>
              <thead>
                <tr>
                  <th>Nom</th>
                  <th>Category</th>
                  <th colspan="3"></th>
                </tr>
              </thead>

              <tbody>
                <% @sub_categories.each do |sub_category| %>
                  <tr>
                    <td><%= sub_category.nom %></td>
                    <td><%= sub_category.category_id %></td>
                    <td><%= link_to 'Afficher', sub_category %></td>
                    <td><%= link_to 'Modifier', edit_sub_category_path(sub_category) %></td>
                    <td><%= link_to 'Supprimer', sub_category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
            <br/>
            <%= link_to 'Nouvelle sous-catégorie', new_sub_category_path %>

                
    </div>

    </div>
</div>

