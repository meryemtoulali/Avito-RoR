<div class="container my-4">

    <%= link_to 'Retour', root_url %>
    <div class="mt-3 simple-container px-5 py-5">
            <div  class="mb-5">
                <h4>Index des catégories</h1>
            </div>

            <table>
              <thead>
                <tr>
                  <th>Nom</th>
                  <th colspan="3"></th>
                </tr>
              </thead>

              <tbody>
                <% @categories.each do |category| %>
                  <tr>
                    <td><%= category.nom %></td>
                    <td><%= link_to 'Afficher', category %></td>
                    <td><%= link_to 'Modifier', edit_category_path(category) %></td>
                    <td><%= link_to 'Supprimer', category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
            <br/>
            <%= link_to 'Nouvelle catégorie', new_category_path %>

                
    </div>

    </div>
</div>

