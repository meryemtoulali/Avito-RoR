<%= form_for(@utilisateur, :html => {class: "form-horizontal", role:"form"}) do |f| %>
        <div class="legende my-3">Entrez vos coordonn√©es ci-dessous</div>

            <div class="form-group">
                <div class="col control-label">
                    <%= f.label "Nom" %>
                </div>
                <div class="col">
                <%= f.text_field :nom, class:"form-control",  placeholder:"Nom"%>
                </div>
            </div>

            <div class="form-group">
                <div class="col control-label">
                    <%= f.label "Email" %>
                </div>
                <div class="col">
                <%= f.email_field :email, class:"form-control",  placeholder:"email"%>
                </div>
            </div>

            <div class="form-group">
                <div class="col control-label">
                    <%= f.label "Telephone" %>
                </div>
                <div class="col">
                <%= f.text_field :telephone, class:"form-control",  placeholder:"telephone"%>
                </div>
            </div>

            <div class="form-group">
                <div class="col control-label">
                    <%= f.label "Mot de passe" %>
                </div>
                <div class="col">
                    <%= f.password_field :password , class:"form-control",  placeholder:"Mot de passe"%>
                </div>
            </div>

            <div class="form-group">
                <div class="col control-label">
                    <%= f.label "Confirmer le mot de passe" %>
                </div>
                <div class="col">
                <%= f.password_field :password_confirmation, class:"form-control",  placeholder:"Confirmer le mot de passe"%>
                </div>
            </div>

            <div class="form-group">
                <div class="col control-label">
                    <%= f.label "Ville" %>
                </div>
                <div class="col">
                <%= f.text_field :ville, class:"form-control",  placeholder:"Ville"%>
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-5">
                    <%= f.submit "Creer un compte", class: "btn btn-primary btn-block" %>
                </div>
            </div>
        <% end %>
