<h1>Utilisateurs#new</h1>
<p>Find me in app/views/utilisateurs/new.html.erb</p>
<h1>Inscription</h1>
<%= render 'error_messages' %> <%# Afficher les erreurs %>
<%= form_for(@utilisateur, :html => {class: "form-horizontal", role:"form"}) do |f| %>
<div class="form-group">
<div class="col-sm-2 control-label">
        <%= f.label :nom %>
</div>
    <div class="col-sm-4">
        <%= f.text_field :nom, class:"form-control",placeholder:"Entrer votre nom"%>
    </div>
 </div>
<div class="form-group">
    <div class="col-sm-2 control-label">
        <%= f.label :email %>
    </div>
    <div class="col-sm-4">
        <%= f.email_field :email, class:"form-control",placeholder:"Entrer votre email"%>
    </div>
</div>
<div class="form-group">
<div class="col-sm-2 control-label">
        <%= f.label :ville %>
</div>
    <div class="col-sm-4">
        <%= f.text_field :ville, class:"form-control",placeholder:"Entrer votre ville"%>
    </div>
 </div>
 <div class="form-group">
<div class="col-sm-2 control-label">
        <%= f.label :telephone %>
</div>
    <div class="col-sm-4">
        <%= f.text_field :telephone, class:"form-control",placeholder:"Entrer votre numero de telephone"%>
    </div>
 </div>
<div class="form-group">
<div class="col-sm-2 control-label">
    <%= f.label :password %>
</div>
<div class="col-sm-4">
    <%= f.password_field :password , class:"form-control",placeholder:"Entrer votre password"%>
</div>
</div>
<div class="form-group">
    <div class="col-sm-2 control-label">
        <%= f.label :password_confirmation, "Confirmation" %>
    </div>
    <div class="col-sm-4">
        <%= f.password_field :password_confirmation, class:"form-control", placeholder:"Entrer votre password"%>
    </div>
</div>
<div class="form-group">
    <div class="col-sm-offset-2 col-sm-4">
        <%= f.submit "Creer", class: "btn btn-primary" %>
    </div>
</div>
<% end %>
