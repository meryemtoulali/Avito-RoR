<div class="container my-4">

    <%= link_to 'Retour', root_url %>
    <div class="mt-3 simple-container px-5 py-5">
            <div  class="mb-5">
                <h4>Index des commandes</h1>
            </div>

            <table>
              <thead>
                <tr>
                  <th>Nom</th>
      <th>Email</th>
      <th>Telephone</th>
      <th>Adresse</th>
      <th>Methode paiement</th>
      <th>Prix</th>
      <th>Utilisateur</th>
      <th>Annonce</th>
      <th colspan="3"></th>
                </tr>
              </thead>

              <tbody>
                <% @commandes.each do |commande| %>
      <tr>
        <td><%= commande.nom %></td>
        <td><%= commande.email %></td>
        <td><%= commande.telephone %></td>
        <td><%= commande.adresse %></td>
        <td><%= commande.methode_paiement %></td>
        <td><%= commande.prix %></td>
        <td><%= commande.utilisateur_id %></td>
        <td><%= commande.annonce_id %></td>
        <td><%= link_to 'Afficher', commande %></td>
        <td><%= link_to 'Modifier', edit_commande_path(commande) %></td>
        <td><%= link_to 'Supprimer', commande, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
              </tbody>
            </table>
            <br/>

                
    </div>

    </div>
</div>
