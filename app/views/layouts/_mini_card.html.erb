<div class="col-md-3 mb-3">
<a class="card-link" href="<%= annonce_path(@annonce) %>">
    <div class="card border-0 mini-card">
        <img class="card-img-top img-fluid" src=<%= @annonce.image_url %> >

        <div class="card-body">
            <h4 class="card-title"><%= @annonce.prix ? @annonce.prix.to_i.to_s+" Dhs" : "Prix non spécifié" %></h4>
            <p class="card-text"><%= @annonce.titre.truncate(30) %></p>

        </div>

    </div>
</a>
</div>