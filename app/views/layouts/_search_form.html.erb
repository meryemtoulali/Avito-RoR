<%= form_tag(search_path, :method => "get") do %>
<div class="input-group">
<%= search_field_tag :search, params[:search], placeholder: "Tapez une recherche", class: "form-control" %>
    <div class="input-group-btn">
        <%= button_tag "Rechercher", :class => 'btn btn-primary glyphicon glyphicon-search', :name => nil %>
    </div>
</div>

<% end %>