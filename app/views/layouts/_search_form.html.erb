<%= form_with url:search_path, :method => "get" do |form| %>
<div class="input-group">
<%= form.search_field :search, placeholder: "Tapez une recherche", class: "form-control" %>

    <div class="form-group">
    <div class="col control-label">
        <%= form.label :category %>
    </div>
    <div class="col">
        <%= form.select :category_id, options_for_select(Category.all.map { |category| [category.nom, category.id]})%>
    </div>
    </div>
    <div class="form-group">
    <div class="col control-label">
        <%= form.label :sub_category %>
    </div>
    <div class="col">
        <%= form.select :sub_category_id, options_for_select(SubCategory.all.map { |sub_category| [sub_category.nom, sub_category.id] })%>
    </div>
    </div>

        <div class="input-group-btn">
        <%= button_tag "Rechercher", :class => 'btn btn-primary glyphicon glyphicon-search', :name => nil %>
    </div>
</div>

<% end %>